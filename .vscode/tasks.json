{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "check",
      "command": "makers",
      // "args": ["check", "--verbose"],
      "args": ["check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "test",
      "command": "makers",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "build",
      "command": "makers",
      "args": ["build"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "purge chain",
      "type": "shell",
      "command": "makers",
      "args": ["chain-dev-purge"],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "start dev",
      "type": "shell",
      "command": "makers",
      "args": ["start"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "shell",
      "label": "fmt check",
      "command": "makers",
      "args": ["format"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    }
  ]
}
